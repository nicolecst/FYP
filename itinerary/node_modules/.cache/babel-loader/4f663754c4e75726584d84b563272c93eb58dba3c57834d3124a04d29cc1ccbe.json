{"ast":null,"code":"// import { useRoute } from \"vue-router\";\nimport axios from \"axios\";\nimport NavBar from \"@/components/NavBar.vue\";\n// import { onMounted, ref } from 'vue';\n\nexport default {\n  name: \"UserProfile\",\n  components: {\n    NavBar\n  },\n  methods: {\n    async UpdateUser(uid) {\n      const updateUserData = {\n        username: this.user.update_username,\n        email: this.user.update_email,\n        gender: this.user.update_gender,\n        age: this.user.update_age,\n        preference: this.user.update_preference,\n        type: this.user.update_type\n      };\n      await axios.put(\"/api/users/\" + uid, updateUserData).then(response => console.log(response.data));\n    }\n  },\n  data() {\n    return {\n      user: {},\n      update_username: '',\n      update_email: '',\n      update_gender: '',\n      update_age: '',\n      update_preference: '',\n      update_type: ''\n    };\n  },\n  mounted() {\n    const t = localStorage.getItem(\"userID\");\n    console.log(t);\n    axios.get(\"/api/users/\" + t).then(response => this.user = response.data);\n  }\n};","map":{"version":3,"names":["axios","NavBar","name","components","methods","UpdateUser","uid","updateUserData","username","user","update_username","email","update_email","gender","update_gender","age","update_age","preference","update_preference","type","update_type","put","then","response","console","log","data","mounted","t","localStorage","getItem","get"],"sources":["/Users/nicolechan/Desktop/FYP_Test/itinerary/src/pages/UserProfile.vue"],"sourcesContent":["<template>\n  <div class=\"bg\">\n    <NavBar />\n    <h1>This is the user edit profile</h1>\n    <div class=\"container\">\n      <img class=\"header\" src=\"@/assets/Images/flowers.jpg\" alt=\"header-img\" />\n      <div class=\"row\">\n        <div class=\"col-md-5\">\n          <img\n            class=\"circle\"\n            src=\"@/assets/Images/male.jpg\"\n            alt=\"male-user-icon\"\n          />\n        </div>\n        <div class=\"col-md-5\">\n          <div class=\"right\">\n            <div class=\"update-form\">\n              <form @submit.prevent=\"UpdateUser(user._id)\">\n                <label for=\"\">Username</label\n                ><input type=\"text\" v-model=\"user.username\" />\n\n                <label for=\"\">Email</label\n                ><input type=\"text\" v-model=\"user.email\" />\n\n                <label for=\"\">Gender</label\n                ><input type=\"text\" v-model=\"user.gender\" />\n\n                <label for=\"\">Age</label\n                ><input type=\"text\" v-model=\"user.age\" />\n\n                <label for=\"\">Preference</label\n                ><input type=\"text\" v-model=\"user.preference\" />\n\n                <label for=\"\">Type</label\n                ><input type=\"text\" v-model=\"user.type\" />\n\n                <p>UserID: {{ user._id }}</p>\n                <p>Username: {{ user.username }}</p>\n                <p>Email: {{ user.email }}</p>\n\n                <button class=\"btn btn-primary profile-button\" type=\"submit\">\n                  Update\n                </button>\n              </form>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\n// import { useRoute } from \"vue-router\";\nimport axios from \"axios\";\nimport NavBar from \"@/components/NavBar.vue\";\n// import { onMounted, ref } from 'vue';\n\nexport default {\n  name: \"UserProfile\",\n  components: {\n    NavBar,\n  },\n  methods: {\n    async UpdateUser(uid) {\n      const updateUserData = {\n        username: this.user.update_username,\n        email: this.user.update_email,\n        gender: this.user.update_gender,\n        age: this.user.update_age,\n        preference: this.user.update_preference,\n        type: this.user.update_type,\n      };\n\n      await axios\n        .put(\"/api/users/\" + uid, updateUserData)\n        .then((response) => console.log(response.data));\n    },\n  },\n  data() {\n    return {\n      user: {},\n      update_username: '',\n      update_email: '',\n      update_gender: '',\n      update_age: '',\n      update_preference: '',\n      update_type: '',\n    };\n  },\n  mounted() {\n    const t = localStorage.getItem(\"userID\");\n    console.log(t);\n    axios\n      .get(\"/api/users/\" + t)\n      .then((response) => (this.user = response.data));\n  },\n};\n</script>\n\n<style>\n.bg {\n  background-color: #002224;\n  background-size: cover;\n  margin: auto;\n  align-items: center;\n  width: 100vw;\n  height: 100vh;\n}\n\n.container {\n  background-color: white;\n  width: 60%;\n  min-height: 500px;\n  height: 70%;\n  padding-left: 0px;\n  padding-right: 0px;\n  border-radius: 30px;\n  /* padding: 40px; */\n}\nimg {\n  width: 250px;\n  height: 250px;\n}\n.circle {\n  /* Make the image circle*/\n  -webkit-border-radius: 50%;\n  -moz-border-radius: 50%;\n  -ms-border-radius: 50%;\n  -o-border-radius: 50%;\n  border-radius: 50%;\n}\n\n.row {\n  padding: 40px;\n}\n\n.right {\n  text-align: left;\n}\n\n.header {\n  width: 100%;\n  height: 100px;\n  object-fit: cover;\n  border-top-left-radius: 30px;\n  border-top-right-radius: 30px;\n}\ninput {\n  display: block;\n}\n</style>\n"],"mappings":"AAqDA;AACA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,MAAK,MAAO,yBAAyB;AAC5C;;AAEA,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,OAAO,EAAE;IACP,MAAMC,UAAUA,CAACC,GAAG,EAAE;MACpB,MAAMC,cAAa,GAAI;QACrBC,QAAQ,EAAE,IAAI,CAACC,IAAI,CAACC,eAAe;QACnCC,KAAK,EAAE,IAAI,CAACF,IAAI,CAACG,YAAY;QAC7BC,MAAM,EAAE,IAAI,CAACJ,IAAI,CAACK,aAAa;QAC/BC,GAAG,EAAE,IAAI,CAACN,IAAI,CAACO,UAAU;QACzBC,UAAU,EAAE,IAAI,CAACR,IAAI,CAACS,iBAAiB;QACvCC,IAAI,EAAE,IAAI,CAACV,IAAI,CAACW;MAClB,CAAC;MAED,MAAMpB,KAAI,CACPqB,GAAG,CAAC,aAAY,GAAIf,GAAG,EAAEC,cAAc,EACvCe,IAAI,CAAEC,QAAQ,IAAKC,OAAO,CAACC,GAAG,CAACF,QAAQ,CAACG,IAAI,CAAC,CAAC;IACnD;EACF,CAAC;EACDA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLjB,IAAI,EAAE,CAAC,CAAC;MACRC,eAAe,EAAE,EAAE;MACnBE,YAAY,EA